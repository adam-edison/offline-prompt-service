{
  "name": "offline-prompt-service",
  "version": "1.0.0",
  "description": "Backend node.js service with AI prompting using offline local model",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias",
    "start": "node dist/index.js",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
    "test": "vitest run",
    "lint": "eslint . --ext .js,.ts,.mjs",
    "lint:fix": "eslint . --ext .js,.ts,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adam-edison/offline-prompt-service.git"
  },
  "keywords": [
    "node",
    "AI",
    "prompt",
    "offline"
  ],
  "author": "Adam Edison",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adam-edison/offline-prompt-service/issues"
  },
  "homepage": "https://github.com/adam-edison/offline-prompt-service#readme",
  "dependencies": {
    "@zodios/core": "^10.9.6",
    "@zodios/express": "^10.6.1",
    "@zodios/openapi": "^10.5.0",
    "express": "^4.21.2",
    "supertest": "^7.1.3",
    "swagger-ui-express": "^5.0.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}
